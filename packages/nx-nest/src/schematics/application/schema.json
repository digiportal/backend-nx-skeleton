{
  "$schema": "http://json-schema.org/schema",
  "$id": "@digiportal/nx-nest/application",
  "title": "@digiportal/nx-nest/application",
  "description": "Generate nestjs application.",
  "examples": [],
  "type": "object",
  "properties": {
    "name": {
      "description": "Name of the application.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "default": ""
    },

    "mode": {
      "description": "Generator mode.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 1,
        "enum": ["create", "modify"]
      },
      "default": ""
    },

    "directory": {
      "description": "Subdirectory for the application.",
      "type": "string"
    },

    "linter": {
      "description": "Linter for the application.",
      "type": "string",
      "enum": ["eslint", "none"],
      "default": "eslint"
    },

    "skipFormat": {
      "description": "Skip formatting after the initiation.",
      "type": "boolean",
      "aliases": ["skip-format"]
    },

    "force": {
      "description": "Do not prompt the user.",
      "type": "boolean"
    },

    "verbose": {
      "description": "Set this to debug mode.",
      "type": "boolean"
    }
  },
  "required": []
}
