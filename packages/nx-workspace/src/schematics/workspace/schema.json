{
  "$schema": "http://json-schema.org/schema",
  "$id": "@digiportal/nx-workspace/workspace",
  "title": "@digiportal/nx-workspace/workspace",
  "description": "Creates a new workspace through @nrwl/tao.",
  "type": "object",
  "properties": {
    "name": {
      "description": "The name of the workspace.",
      "type": "string",
      "$default": {
        "$source": "argv",
        "index": 0
      }
    },
    "directory": {
      "type": "string",
      "format": "path",
      "description": "The directory name to create the workspace in."
    },
    "layout": {
      "type": "string",
      "description": "Layout of the workspace",
      "enum": ["apps-and-libs", "packages"]
    },
    "skipInstall": {
      "description": "Skip installing dependency packages.",
      "type": "boolean",
      "default": false
    },
    "skipGit": {
      "description": "Skip initializing a git repository.",
      "type": "boolean",
      "default": false,
      "alias": "g"
    },
    "commit": {
      "description": "Initial repository commit information.",
      "oneOf": [
        {
          "type": "boolean"
        },
        {
          "type": "object",
          "properties": {
            "name": {
              "type": "string"
            },
            "email": {
              "type": "string",
              "format": "email"
            },
            "message": {
              "type": "string"
            }
          },
          "required": ["name", "email"]
        }
      ],
      "default": true
    },
    "cli": {
      "description": "CLI used for generating code and running tasks",
      "type": "string",
      "enum": ["nx", "angular"]
    }
  }
}
