{
  "$schema": "http://json-schema.org/schema",
  "$id": "@digiportal/nx-workspace/remove",
  "title": "@digiportal/nx-workspace/remove",
  "description": "Remove a project from the workspace",
  "type": "object",
  "examples": [],
  "properties": {
    "projectName": {
      "type": "string",
      "alias": "project",
      "description": "Name of the project to remove.",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "default": ""
    },

    "forceRemove": {
      "type": "boolean",
      "aliases": ["force-remove"],
      "description": "When true, forces removal even if the project is still in use.",
      "default": false
    },

    "skipFormat": {
      "type": "boolean",
      "aliases": ["skip-format"],
      "description": "Skip formatting files.",
      "default": false
    }
  },
  "required": []
}
